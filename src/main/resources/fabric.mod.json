  "description": "GoldTools+ or Gold Tools Plus is a mod based around altering the gold tier of equipment in minecraft with the goal of making it have a niche use.",
  "authors": [
    "SufficientlyPositive a.k.a ASmallFish"
  ],

  "license": "CC0 1.0 Universal",

  "environment": "*",
  "entrypoints": {
    "main": [
      "mods.SufficientlyPositive.GoldToolsPlus.GoldToolsPlus"
    ],
    "client": [
      "mods.SufficientlyPositive.GoldToolsPlus.client.GoldToolsPlusClient"
    ]
  },
  "mixins": [
    "goldtoolsplus_monsters.mixins.json",
    "goldtoolsplus_enchantments.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  }
}
